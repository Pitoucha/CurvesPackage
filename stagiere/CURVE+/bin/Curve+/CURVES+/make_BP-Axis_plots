#!/bin/bash

cat > BP-Axis_param_Xdisp.plt <<EOF
set terminal postscript eps enhanced color solid "Times-Roman" 16
set output 'BP-axis_Xdisp.eps'

set pm3d map 
set title 'Xdisp'
set palette rgbformulae 22,13,-31
set xlabel 'time'
set ylabel 'pair number'

splot 'BP-Axis_Parameters' u 1:2:3 with pm3d notitle

EOF

cat > BP-Axis_param_Ydisp.plt <<EOF
set terminal postscript eps enhanced color solid "Times-Roman" 16
set output 'BP-axis_Ydisp.eps'

set pm3d map 
set title 'Ydisp'
set palette rgbformulae 22,13,-31
set xlabel 'time'
set ylabel 'pair number'

splot 'BP-Axis_Parameters' u 1:2:4 with pm3d notitle

EOF

cat > BP-Axis_param_Inclin.plt <<EOF
set terminal postscript eps enhanced color solid "Times-Roman" 16
set output 'BP-axis_Inclin.eps'

set pm3d map 
set title 'Inclin'
set palette rgbformulae 22,13,-31
set xlabel 'time'
set ylabel 'pair number'

splot 'BP-Axis_Parameters' u 1:2:5 with pm3d notitle

EOF

cat > BP-Axis_param_Tip.plt <<EOF
set terminal postscript eps enhanced color solid "Times-Roman" 16
set output 'BP-axis_Tip.eps'

set pm3d map 
set title 'Tip'
set palette rgbformulae 22,13,-31
set xlabel 'time'
set ylabel 'pair number'

splot 'BP-Axis_Parameters' u 1:2:6 with pm3d notitle

EOF

cat > BP-Axis_param_Ax-bend.plt <<EOF
set terminal postscript eps enhanced color solid "Times-Roman" 16
set output 'BP-axis_Ax-bend.eps'

set pm3d map 
set title 'Ax-bend'
set palette rgbformulae 22,13,-31
set xlabel 'time'
set ylabel 'pair number'

splot 'BP-Axis_Parameters' u 1:2:7 with pm3d notitle

EOF

gnuplot BP-Axis_param_*.plt

for f in *eps ; do epstopdf $f ; done

